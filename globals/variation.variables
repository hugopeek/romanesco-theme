/* Segment */
@variationSegmentPiled: false;
@variationSegmentStacked: false;
@variationSegmentLoading: false;

/* Dimmer */
@variationDimmerBlurring: false;

/* Tab */
@variationTabLoading: false;

/* Transition */
@variationTransitionBrowse: false;
@variationTransitionDrop: false;
@variationTransitionFlip: false;
@variationTransitionFly: false;
@variationTransitionSwing: false;
@variationTransitionFlash: false;
