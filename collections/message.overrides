/*******************************
         Theme Overrides
*******************************/

.ui.message {
  border-color: currentColor;
  border-left: (@borderRadius + 0.1) solid;

  a {
    color: currentColor;
  }

  :not(pre) > code[class*="language-"],
  pre[class*="language-"] {
    background: @transparentBlack;
  }

  * + &,
  + * {
    margin-top: @verticalRhythm2;
  }
}