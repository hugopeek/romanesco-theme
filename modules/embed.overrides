/*******************************
        Video Overrides
*******************************/

.ui.video.embed {
    border-radius: @roundedBorderRadius;

    // This content is only shown if ConsentFriend is active, but consent has not been given
    &.consent .pending {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding: 1em;

        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;

        a {
            cursor: pointer;
        }
    }
}